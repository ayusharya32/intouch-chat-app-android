<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InTouch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowContentTransitions">true</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Theme.InTouch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.InTouch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InTouch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="UbuntuFontLight">
        <item name="fontFamily">@font/ubuntu_light</item>
        <item name="android:fontFamily">@font/ubuntu_light</item>
    </style>

    <style name="UbuntuFontRegular">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="PacificoFontRegular">
        <item name="fontFamily">@font/pacifico_regular</item>
        <item name="android:fontFamily">@font/pacifico_regular</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.InTouch.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_vector_logo</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">50</item>
        <item name="postSplashScreenTheme">@style/Theme.InTouch</item>
    </style>

    <style name="Theme.Intouch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Intouch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="text_bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_normal">
        <item name="android:textStyle">normal</item>
    </style>

</resources>