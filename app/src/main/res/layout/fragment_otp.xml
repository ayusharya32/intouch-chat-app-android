<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/img_app_logo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingHorizontal="20dp"
            android:src="@drawable/ic_app_logo"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_sending_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="30dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_app_logo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sending OTP..."
                android:textStyle="italic"
                android:textColor="@color/grey_300"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/blue_200" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingHorizontal="26dp"
            android:paddingVertical="12dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_app_logo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Verify Phone"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/grey_500" />

            <TextView
                android:id="@+id/txt_code_sent_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="Code is sent to +91 9999999999"
                android:textSize="16sp"
                android:textColor="@color/blue_200" />

            <LinearLayout
                android:id="@+id/layout_enter_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="30dp">

                <EditText
                    android:id="@+id/et_otp_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="center"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/et_otp_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="center"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/et_otp_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="center"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/et_otp_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="center"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/et_otp_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="center"
                    android:textCursorDrawable="@null" />

                <EditText
                    android:id="@+id/et_otp_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="number"
                    android:maxLength="1"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="center"
                    android:textCursorDrawable="@null" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/txt_otp_not_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Didn't receive code?"
                    android:textSize="16sp"
                    android:textColor="@color/grey_300" />

                <TextView
                    android:id="@+id/txt_request_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Request Again"
                    android:layout_marginStart="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_200" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/green_300"
                    android:paddingVertical="6dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:theme="@style/UbuntuFontRegular" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="@color/blue_200"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

            </FrameLayout>

        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim_otp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/enter_otp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_form" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>